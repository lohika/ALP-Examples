<?xml version="1.0" encoding="UTF-8"?>
<suite name='ALP Framework'>
	<listeners>	
	<!-- Here we enum ALP Listeners that actually gather all logs and store them on local FS (Reporter) and remote DB (DBResultListener).
		!!!IMPORTANT - The order of listeners should be always the same ( first  Reporter and then 	DBResultListener ) because DBResultListener
		store data generated by Reporter. 
	 -->
		 <listener class-name="com.lohika.alp.reporter.Reporter" />
		<listener class-name="com.lohika.alp.reporter.db.DBResultListener" />
	</listeners>	
	 <groups>
    		<run>
      		<include name="test"/>
    		</run>
  		</groups>   
	<test name='FaceBook'>					
		<packages>			
			 <package name="com.lohika.alp.howto.tests" />
		</packages>
	</test>	
</suite>